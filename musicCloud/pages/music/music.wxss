/* pages/music/music.wxss */
.swiper-img{
  width: 100vw;
  height: 100%;
}
.playlist-container{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
  flex-direction: row;
}
.topList{
  padding: 8px 24px;
  line-height: 1.41176471;
  border-radius: 4px;
  font-weight: 700;
  font-size: 17px;

}
.nav{
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.selActive{
  color: #f40;
  border-bottom: 4rpx solid #f40;
}
.item{
  display: flex;
  margin: 0 40rpx;
  padding-top: 20rpx;
  height: 200rpx;
}
.icon{
  flex: 0 0 200rpx;
  width: 200rpx;
  height: 200rpx;
}
.icon-img{
  width: 200rpx;
  height: 200rpx;
}
.songlist{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 40rpx;
  height: 200rpx;
  overflow: hidden;
  background: #333;
  color: hsla(0,0%,100%,.3);
  font-size: 12px;
}
  
.song{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 52rpx;
}
.noWrapp{
	width: 100%;
	white-space: nowrap;
	overflow :hidden;
	text-overflow: ellipsis;
}
.tips{
  text-align: center;
}